  <exclude-pattern>web/private/*</exclude-pattern>
  <!-- End Pantheon addition -->

  <!-- Show colors in console -->
  <arg value="-colors"/>

  <!-- Show sniff codes in all reports -->
  <arg value="ns"/>

  <!-- Use WordPress Coding Standards as a base -->
  <rule ref="WordPress"/>
</ruleset>
